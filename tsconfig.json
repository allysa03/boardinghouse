{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",  // Changed to .ts (for TypeScript types)
    "expo-env.d.ts"  // Changed to .ts extension
  ]
}
